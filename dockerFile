# Dockerfile
FROM wordpress:latest

# Bật mod_rewrite để permalink và CSS hoạt động bình thường
RUN a2enmod rewrite

# Đặt quyền đúng cho toàn bộ mã nguồn
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html

# (Tuỳ chọn) Copy plugin hoặc theme sẵn có từ thư mục build
# COPY ./wp-content/plugins/my-plugin /var/www/html/wp-content/plugins/my-plugin
# COPY ./wp-content/themes/my-theme /var/www/html/wp-content/themes/my-theme

# Giữ lại quyền cho nội dung vừa copy (nếu có)
RUN chown -R www-data:www-data /var/www/html/wp-content
